# managed by Ansible
location / {
  alias /var/www/firmware/;
  index index.html;
  fancyindex on;
  fancyindex_name_length 255;
  #fancyindex_localtime on;
}

location = / {
  if ($host = "web.ffbs") {
    return 303 $scheme://$host/selector/;
  }
  if ($host = "map.ffbs") {
    return 303 $scheme://$host/meshviewer/;
  }
  return 303 https://$host/selector/;
}


location /raw {
  alias /var/www/firmware;
  index none;
  fancyindex on;
  fancyindex_name_length 255;
}

location /selector/ {
  alias /var/www/firmware-selector/;
  index index.html;
}


location /.git {
  deny all;
  return 404;
}

