# managed by Ansible
server {
        server_name firmware.foobar;

        listen 80;
        listen [::]:80;

        location / {
                alias /var/www/firmware/;
                index index.html;
                autoindex on;
        }

        location /raw {
                alias /var/www/firmware;
                index none;
                autoindex on;
        }

        location /.git {
                deny all;
                return 404;
        }
        location /raw/.git {
                deny all;
                return 404;
        }
}
